                .IFrameName("frmMain7")
                .EnableIFrame(true)
    )
    @(F.Window()
            .BodyPadding(10)
            .AutoScroll(true)
            .IsViewPort(true)
            .Hidden(true)
            .IsModal(true)
            .EnableResize(true)
            .EnableCollapse(true)
            .EnableMaximize(true)
            .Title("浏览电子文件")
