            .IFrameName("frmMain3")
            .EnableIFrame(true)
            .Target(Target.Parent)
    )
    @(F.Window()
            .BodyPadding(10)
            .AutoScroll(true)
            //.OnClose(Url.Action("Window1_Close"))
            //.CloseAction(CloseAction.HidePostBack)
            .Hidden(true)
            .IsModal(true)
            .EnableResize(true)
            .EnableCollapse(true)
            .EnableMaximize(true)
            .Title("电子借阅")
