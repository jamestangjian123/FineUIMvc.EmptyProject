@{
    var F = @Html.F();
}

@section head {
    <link type="text/css" rel="stylesheet" href="~/res/css/index.css" />
}
@section body {
    @(F.Form()
        .BodyPadding(5)
        .AutoScroll(true)
        .ShowHeader(false)
        .ShowBorder(false)
        .ID("form_ML")
        .IsViewPort(true)
        .Rows(
            F.FormRow().Items(F.HiddenField().ID("txt_MID").LabelAlign(LabelAlign.Right).Text(ViewBag.MID)),
            F.FormRow().Items(F.HiddenField().ID("txt_ID").LabelAlign(LabelAlign.Right).Text(ViewBag.ID)),
                    F.FormRow().Items(F.TextBox().ID("txt_NO").Label("序号:").LabelAlign(LabelAlign.Right).Text(ViewBag.NO)),
                    F.FormRow().Items(F.TextBox().ID("txt_WH").Label("文号:").LabelAlign(LabelAlign.Right).Text(ViewBag.WH)),
                    F.FormRow().Items(F.TextBox().ID("txt_Title").Label("标题:").LabelAlign(LabelAlign.Right).Text(ViewBag.Title)),
                    F.FormRow().Items(F.DropDownList().ID("cmb_BGQX").Label("保管期限").LabelAlign(LabelAlign.Right).Items((ListItem[])ViewData["保管期限"]).SelectedValue(ViewBag.BGQX)),
                   // F.FormRow().Items(F.TextBox().ID("txt_Type").Label("类型:").LabelAlign(LabelAlign.Right).Text(ViewBag.Type)),
                    F.FormRow().Items(F.DatePicker().ID("txt_Date").Label("日期:").LabelAlign(LabelAlign.Right).SelectedDate(ViewBag.Date)),
                    F.FormRow().Items(F.TextBox().ID("txt_SendUnit").Label("发送单位:").LabelAlign(LabelAlign.Right).Text(ViewBag.SendUnit)),
                    F.FormRow().Items(F.TextBox().ID("txt_ReceiveUnit").Label("接收单位:").LabelAlign(LabelAlign.Right).Text(ViewBag.ReceiveUnit)),
                    F.FormRow().Items(F.TextBox().ID("txt_Sender").Label("发送人:").LabelAlign(LabelAlign.Right).Text(ViewBag.Sender)),
                    F.FormRow().Items(F.TextBox().ID("txt_Remark").Label("备注:").LabelAlign(LabelAlign.Right).Text(ViewBag.Remark)),
            F.FormRow()
            .Items(
                F.Panel()
                    .ID("Panel1")
                    .CssStyle("text-align: right;")
                    .ShowBorder(false)
                    .ShowHeader(false)
                    .Items(
                        F.Button()
                            .Text("保存")
                            .ID("btnAddML")
                                    .OnClick(Url.Action("AddMessageInfo"), "form_ML").Width(150)//需改
                    )
                )
           )
    )
}

@section script {
    <script src="~/res/js/grid.js"></script>
    <script>
    </script>
}