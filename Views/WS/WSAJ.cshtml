    function onBrrDZ(event) {
        var grid = F.ui.Grid1;
        if (!grid.hasSelection()) {
            F.alert('没有选中要申请电子借阅的档案！');
            return;
        }

        var items = getGridSelectedRows();
        for (var i= 0; i < items.length;i++)
        {
            var n = items[i];
            var s = n[n.length - 1].toString();
            //alert(s);
            //alert(s.type);
            if (s != null && s != '' && s != '无')
            {
                F.alert("您所申请的档案中含 " + s + " 级， 您必须在涉密档案模块进行浏览!");
                return;
            }
        }
        // 触发后台事件
